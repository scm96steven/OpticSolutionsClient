@model OpticSolutionsClient.Repositories.Entitys.Appointment
@using CaptchaMvc.HtmlHelpers

@using CaptchaMvc;
   
<link href="~/Content/css/AdminLTE.css" rel="stylesheet" />
<link href="~/Content/css/Client.css" rel="stylesheet" />


<div class="col-md-6 col-md-offset-3">
    <div class="service">


        @using (Html.BeginForm("CreateAppointment", "Appointment", FormMethod.Post, null))
            {
            <div class="panel panel-default material-panel material-panel_info pad">
                <h4 class="material-panel__heading">Confirmar cita</h4>
                <div class="material-panel__body">

                    <div>

                        <dl class="dl-horizontal">
                            <dt>
                                Doctor
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DoctorFullname)
                                <input type="hidden" name="DoctorUsername" value='@Model.DoctorUsername' />
                            </dd>

                            <dt>
                                Nombres
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Names)
                                <input type="hidden" name="Names" value=@Model.Names />
                            </dd>

                            <dt>
                                Apellidos
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Last_Names)
                                <input type="hidden" name="Last_Names" value=@Model.Last_Names />
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                                <input type="hidden" name="Email" value=@Model.Email />
                            </dd>
                            <dt>
                                Telefono
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Phone)
                                <input type="hidden" name="Phone" value=@Model.Phone />
                            </dd>

                            <dt>
                                Cedula
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IdentificationCard)
                                <input type="hidden" name="IdentificationCard" value=@Model.IdentificationCard />
                            </dd>

                            <dt>
                                Comentario
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Comment)
                                <input type="hidden" name="Comment" value=@Model.Comment />
                            </dd>

                            <dt>
                                Fecha y hora
                            </dt>

                            <dd>

                                @Html.DisplayFor(model => model.StartDate)
                                <input type="hidden" name="StartDate" value='@Model.StartDate' />
                            </dd>

                        </dl>
                      
                        <div class="col-md-offset-2">
                            @Html.MathCaptcha()
                            <br />
                            <input action="action" onclick="window.history.go(-1); return false;" type="button" value="Atras" class="btn material-btn_danger" />
                            <input type="submit" value="Confirmar Cita" class="btn material-btn_success" />
                        </div>
                 



             
                        



                    </div>
                </div>
            </div>

            }
    </div>
</div>